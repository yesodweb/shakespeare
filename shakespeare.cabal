                 , shakespeare
                 , time             >= 1
                 , containers
                 , parsec           >= 2       && < 4
                 , hspec            == 2.*
                 , text             >= 0.7
                 , process
                 , template-haskell >= 2.7
                 , ghc-prim
                 , HUnit
                 , bytestring
                 , directory
                 , aeson
                 , transformers
